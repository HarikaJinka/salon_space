<% title "Login" %>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'text' %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'text' %>
  </p>
  <p><%= button_tag "Log in", :class => 'positive' %></p>
<% end %>


