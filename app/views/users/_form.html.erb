<% semantic_form_for @user do |f| %>
  <% f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end -%>
  <% f.buttons do %>
    <%= f.commit_button image_tag('/stylesheets/icons/tick.png') + " Submit", :use_button_tag => true, :class => 'positive' %>
  <% end -%>
<% end %>
