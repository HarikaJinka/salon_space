<% semantic_form_for @client, :html => { :class  => 'client' } do |f| %>
    <% f.inputs :name =>  "Basic Info" do %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :phone, :required => false %>
      <%= f.input :address, :required => false %>
      <%= f.input :hair_description, :input_html => {:class => 'shallow'} %>
      <%= f.input :notes, :required => false %>
      <%= f.input :birthdate, :as => :string, :required => false %>
    <% end -%>
    <% f.buttons do %>
      <%= f.commit_button image_tag('/stylesheets/icons/tick.png') + " Save", :use_button_tag => true, :button_html => {:class => 'positive'} %>
    <% end -%>
<% end %>
