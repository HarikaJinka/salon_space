<% form_for @appointment do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :time, "Date of Appointment" %><br />
    <%= f.datetime_select :time %>
  </p>
  <p>
    <%= f.label :client_id %>
    <%= f.collection_select :client_id, Client.all, :id, :name, :include_blank => true %>
  </p>
  <p><%= f.submit "Save" %></p>
<% end %>
